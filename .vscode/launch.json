{
  "version": "0.2.0",
  "configurations": [
    
    {
      "name": "Next.js: フルスタック",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "serverReadyAction": {
        "pattern": "- Local:.+(https?://.+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      },
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Next.js: サーバーサイド",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev"
    },
    {
      "name": "Next.js: クライアントサイド",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000"
    }
  ]
}